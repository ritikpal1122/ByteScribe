# ── Database (Neon for production, local for dev) ──
DATABASE_URL=postgresql+asyncpg://learntext:learntext_secret@localhost:5432/learntext

# ── Redis (Upstash for production, local for dev) ──
REDIS_URL=redis://localhost:6379/0

# ── Auth / Security ──
SECRET_KEY=change-me-in-production-use-a-real-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256

# ── Code Execution (public Piston API for production) ──
PISTON_URL=https://emkc.org/api/v2/piston

# ── GitHub OAuth ──
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:5173/auth/github/callback

# ── Anthropic ──
ANTHROPIC_API_KEY=your-anthropic-api-key

# ── Frontend URL (for CORS + email links) ──
FRONTEND_URL=http://localhost:5173

# ── SMTP / Email ──
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@learntext.dev
SMTP_FROM_NAME=LearnText
SMTP_USE_TLS=true

# ── App ──
APP_NAME=LearnText
DEBUG=true
